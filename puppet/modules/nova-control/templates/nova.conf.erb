[DEFAULT]
verbose = <%= nova_log_verbose %>
debug = <%= nova_log_debug %>
logdir = /var/log/nova
lock_path = /var/lock/nova
state_path = /var/lib/nova
auth_strategy = keystone
allow_resize_to_same_host = False
api_paste_config = /etc/nova/api-paste.ini
rootwrap_config = /etc/nova/rootwrap.conf
compute_scheduler_driver = nova.scheduler.filter_scheduler.FilterScheduler
cpu_allocation_ratio = 1
ram_allocation_ratio = 1.3
reserved_host_disk_mb = 5000
reserved_host_memory_mb = 1024
compute_fill_first_cost_fn_weight = -1.0
dhcpbridge_flagfile = /etc/nova/nova.conf
force_dhcp_release = True
fixed_range = 10.0.0.0/20
s3_host = <%= nova_s3_host %>
s3_port = <%= nova_s3_port %>
osapi_compute_extension = nova.api.openstack.compute.contrib.standard_extensions
my_ip = <%= nova_my_ip %>
start_guests_on_host_boot = True
resume_guests_state_on_host_boot = True
rabbit_max_retries = 0
auto_assign_floating_ip = false
metadata_host = <%= nova_metadata_host %>
metadata_port = 8775
sql_connection = mysql://<%= nova_db_user %>:<%= nova_db_password %>@<%= mysql_host %>/<%= nova_db_name %>?charset=utf8
#baremetal_sql_connection = mysql://root:csdb123cnic@127.0.0.1/baremetal?charset=utf8
libvirt_type = <%= libvirt_type %>
libvirt_cpu_mode = <%= libvirt_cpu_mode %>
instance_name_template = instance-%08x
image_service = nova.image.glance.GlanceImageService
rpc_response_timeout = 1200
disk_cache_model = writeback
enabled_apis = ec2,osapi_compute,metadata
volume_api_class = nova.volume.cinder.API
instances_path = /var/lib/nova/instances
multi_host = True
send_arp_for_ha = True
logging_context_format_string = %(asctime)s %(color)s%(levelname)s %(name)s [[01;36m%(request_id)s [00;36m%(user_name)s %(project_name)s%(color)s] [01;35m%(instance)s%(color)s%(message)s[00m
logging_default_format_string = %(asctime)s %(color)s%(levelname)s %(name)s [[00;36m-%(color)s] [01;35m%(instance)s%(color)s%(message)s[00m
logging_debug_format_suffix = [00;33mfrom (pid = %(process)d) %(funcName)s %(pathname)s:%(lineno)d[00m
logging_exception_prefix = %(color)s%(asctime)s TRACE %(name)s [01;35m%(instance)s[00m
network_manager = nova.network.manager.FlatDHCPManager
public_interface = <%= public_interface %>
vlan_interface = <%= vlan_interface %>
flat_network_bridge = <%= flat_network_bridge %>
flat_interface = <%= flat_interface %>
novncproxy_base_url = http://<%= novncproxy_host %>:6080/vnc_auto.html
xvpvncproxy_base_url = http://<%= xvpvncproxy_host %>:6081/console
vncserver_listen = 0.0.0.0
vncserver_proxyclient_address = <%= vncserver_proxyclient_address %>
ec2_dmz_host = <%= ec2_dmz_host %>
rabbit_host = <%= rabbit_host %>
rabbit_password = <%= rabbit_password %>
glance_api_servers = <%= glance_host %>:9292
compute_driver = libvirt.LibvirtDriver
firewall_driver = nova.virt.libvirt.firewall.IptablesFirewallDriver
scheduler_host_manager = nova.scheduler.baremetal_host_manager.BaremetalHostManager
notification_topics = notifications
notification_driver = nova.openstack.common.notifier.rabbit_notifier
