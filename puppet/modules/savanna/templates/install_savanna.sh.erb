#!/bin/bash

[ -e <%= source_dir %>/savanna ] && rm -fr <%= source_dir %>/savanna
cd <%= source_dir %>
tar xf savanna.tar.gz
cd savanna*
virtualenv --clear --never-download savanna-venv
cp -fr install_files/* savanna-venv/lib/python2.7/site-packages/
source savanna-venv/bin/activate
./savanna-venv/bin/python setup.py develop
deactivate
